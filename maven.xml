<!DOCTYPE project [
	<!ENTITY maven1 SYSTEM "maven.lib.xml">
    <!ENTITY maven2 SYSTEM "maven.dist.xml">
]>


<project xmlns:j="jelly:core"
         xmlns:deploy="deploy">
         
         &maven1;
         &maven2;
    
    <preGoal name="jar:jar">
		<attainGoal name="java:compile" />
		<echo message="add the start scripts and webapp to the jar" />
		<copy toDir="${maven.build.dir}/classes/scripts">
			<fileset dir="./src/main/release/scripts">
				<include name="*"></include>
			</fileset>
		</copy>
        <copy toDir="${maven.build.dir}/classes/webapp">
			<fileset dir="./src/main/release/webapp">
				<include name="**/*"></include>
			</fileset>
		</copy>
	</preGoal> 
</project>